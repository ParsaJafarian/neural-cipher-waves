      <Label alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" prefHeight="37.0" prefWidth="274.0" text="Classic Caesar Cipher" textAlignment="CENTER">
         <font>
            <Font name="Arial Bold" size="24.0" />
         </font>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="683.0" prefWidth="1108.0" VBox.vgrow="ALWAYS">
      <children>
            <HBox alignment="CENTER" focusTraversable="true" layoutX="-1.0" prefHeight="707.0" prefWidth="1108.0">
               <children>
                  <VBox prefHeight="707.0" prefWidth="420.0">
                     <children>
                        <Label prefHeight="17.0" prefWidth="43.0" text="Input">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </Label>
                        <TextArea focusTraversable="false" prefHeight="680.0" prefWidth="420.0" promptText="Hi team, I woke up sick. I can't come to work today!" wrapText="true">
