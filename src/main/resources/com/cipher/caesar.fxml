                              <RadioButton focusTraversable="false" mnemonicParsing="false" prefHeight="45.0" prefWidth="125.0" selected="true" styleClass="toggle-button" stylesheets="@caesar.css" text="Encrypt   ">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="ende" />
                                 </toggleGroup>
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets right="5.0" />
                                 </HBox.margin>
                              </RadioButton>
                              <RadioButton focusTraversable="false" mnemonicParsing="false" prefHeight="45.0" prefWidth="125.0" styleClass="toggle-button" stylesheets="@caesar.css" text="Decrypt   " toggleGroup="$ende">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="5.0" />
                                 </HBox.margin>
                              </RadioButton>
                           </children>
                           <VBox.margin>
                              <Insets bottom="25.0" left="15.0" right="15.0" top="15.0" />
                           </VBox.margin>
                        </HBox>
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <ImageView fx:id="outer" fitHeight="495.0" fitWidth="422.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@outer.png" />
                                 </image>
                              </ImageView>
                              <ImageView fx:id="inner" fitHeight="341.0" fitWidth="330.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@inner.png" />
                                 </image>
                              </ImageView>
                              <Circle fx:id="outerC" fill="#00438200" onMouseDragged="#onDraggedO" onMousePressed="#onMousePressedO" radius="208.0" stroke="BLACK" strokeType="INSIDE" />
                              <Circle fx:id="innerC" fill="#1f93ff00" onMouseDragged="#onDraggedI" onMousePressed="#onMousePressedI" radius="164.0" stroke="BLACK" strokeType="INSIDE" />
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
                  <VBox prefHeight="707.0" prefWidth="420.0">
                     <children>
                        <Label text="Preview">
                           <padding>
                              <Insets left="5.0" />
                           </padding>
                        </Label>
                        <TextArea disable="true" editable="false" prefHeight="670.0" prefWidth="420.0" text="Kl whdp, L zrnh xs vlfn. L fdq'w frph wr zrun wrgdb!" wrapText="true">
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </TextArea>
                     </children>
                  </VBox>
               </children>
            </HBox>
      </children>
    </AnchorPane>
      <HBox prefHeight="100.0" prefWidth="200.0" />
      <TextFlow prefHeight="200.0" prefWidth="200.0" />
  </children>
